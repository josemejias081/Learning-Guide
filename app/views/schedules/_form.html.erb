<section class="section-form">
  <div class="card card-form">
    <div class="card-body">
      <%= form_with(model: @schedule) do |f| %>
      <% if @schedule.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@schedule.errors.count, "error") %> prohibited this topic from being saved:</h2>
          <ul>
            <% @schedule.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label :Fecha %>
        <%= f.date_field :date,class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :Evento %>
        <%= f.text_field :event,class: 'form-control' %>
      </div>

      <div class="form-group mt-2">
        <%= f.label :Nota %>
        <%= f.rich_text_area :note,class: 'form-control' %>
      </div>

      <div>
        <%= f.submit "Guardar", class:"btn btn-success mt-3" %>
      </div>

    <% end %>
      
    </div>
  </div>
</section>
